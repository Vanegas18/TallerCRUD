@model TallerCRUD.Models.Libro_autor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Agregar nueva relacion de Libro - Autor</h4>
<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="IdAutor" class="control-label"></label>
                <select asp-for="IdAutor" class ="form-control" asp-items="ViewBag.IdAutor"></select>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Isbn" class="control-label"></label>
                <select asp-for="Isbn" class ="form-control" asp-items="ViewBag.Isbn"></select>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
